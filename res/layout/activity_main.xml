<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calm"
    android:gravity="clip_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".myMainScreen" >

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/logicalButton"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="135dp"
        android:layout_weight="1"
        android:src="@drawable/kkv_logo" />

    <ImageButton
        android:id="@+id/logicalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/logicalModelButton"
        android:onClick="launchLM"
        android:src="@drawable/lm_launcher" />

    <Button
        android:id="@+id/buttonLoadPictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/logicalButton"
        android:layout_below="@+id/logicalButton"
        android:layout_weight="1"
        android:text="Select Image" />

</RelativeLayout>