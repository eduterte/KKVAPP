<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.kkv.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_leaf"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.kkv.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        //this is for home screen
        <activity
            android:name="net.kkv.app.myMainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="net.kkv.CLEARSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.kkv.app.LogicalModel"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_logical_model"
            android:parentActivityName="net.kkv.app.MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.kkv.app.MainActivity" />
        </activity>
        <activity
            android:name="net.kkv.app.Logical"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_logical"
            android:parentActivityName="net.kkv.app.myMainScreen"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.kkv.app.myMainScreen" />
        </activity>
    </application>

</manifest>
